{% set currentDescription =getServiceDescription(app.request.locale,service) %}
<div class=" col-md-6  col-lg-4 mx-auto ">
    <!-- service number 6 -->
    <div class="box box-service box-hover" data-aos="fade-left" data-aos-delay="350">
        <div class="box-icon my-2">
            <i class="bi bi-android2"></i>
        </div>
        <h2 class="title-2 my-2 ">{{ service.name }}</h2>
        {% if currentDescription is not null  %}
            <p>{{ currentDescription.summary |slice(0,150) ~'...' }}</p>
        {% endif %}
        <a href="service-single.html" class="my-2 learn-more">learn more <i class="bi bi-arrow-right"></i></a>
    </div>
</div>